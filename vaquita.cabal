cabal-version: 2.1
name:          vaquita
version:       0.1.0.0

synopsis: have a whip-round with friends and family

author:     GastÃ³n Tonietti
maintainer: gaston@tonietti.dev

library
    hs-source-dirs:   src
    default-language: Haskell2010
    exposed-modules:  Vaquita
                    , Vaquita.Telegram.Bot
    build-depends:    base ^>=4.14.1.0
                    , aeson
                    , bytestring
                    , containers
                    , Decimal
                    , scotty
                    , req
                    , text
                    , http-client-tls
                    , connection

executable vaquita
    main-is:          Main.hs
    hs-source-dirs:   app
    default-language: Haskell2010
    build-depends:    base ^>=4.14.1.0
                    , vaquita

test-suite tests
    type:           exitcode-stdio-1.0
    main-is:        tests.hs
    hs-source-dirs: test
    build-depends:  base ^>=4.14.1.0
                  , vaquita
                  , hedgehog
                  , containers
                  , Decimal
